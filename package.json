{
  "name": "emulos",
  "productName": "EmulOS",
  "version": "0.0.2",
  "description": "Computer (not console) emulator frontend",
  "main": "main.js",
  "author": "Fernando Garcia <fg1998@gmail.com>",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish always",
    "dist:draft": "electron-builder --publish onTagOrDraft",
    "dist:win": "electron-builder --win nsis --x64 --publish always",
    "dist:linux": "electron-builder --linux deb --armv7l --publish never",
    "dist:mac": "electron-builder --mac dmg --publish never"
  },
  "dependencies": {
    "electron-updater": "^4.6.5",
    "node-wifi": "^2.0.16",
    "systeminformation": "^5.25.11",
    "wifi-control": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.12.0"
  },
  "build": {
    "appId": "com.fg1998.emulos",
    "productName": "EmulOS",
    "artifactName": "${productName}-v${version}-${os}-${arch}.${ext}",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "data/**/*",
      "docs/**/*",
      "config/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "linux": {
      "target": ["deb"],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "build/icon.icns"
    },
    "deb": {
      "artifactName": "${name}_${version}_${arch}.deb",
      "maintainer": "Fernando Garcia <fg1998@gmail.com>",
      "depends": [
        "libappindicator1",
        "libxtst6"
      ],
      "afterInstall": "fix-install-path.sh",
      "fpm": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "fg1998",
        "repo": "emulos",
        "releaseType": "draft"
      }
    ]
  }
}
