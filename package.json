{
  "name": "emulos",
  "productName": "EmulOS",
  "version": "0.0.2",
  "description": "Computer (not console) emulator frontend",
  "main": "main.js",
  "author": "Fernando Garcia <fg1998@gmail.com>",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish always",
    "dist:draft": "electron-builder --publish onTagOrDraft",
    "dist:win": "electron-builder --win nsis zip --x64 --publish always",
    "dist:linux": "electron-builder --linux deb tar.gz --armv7l --publish never",
    "dist:mac": "electron-builder --mac dmg zip --publish never"
  },
  "dependencies": {
    "core-util-is": "^1.0.3",
    "electron-updater": "^4.6.5",
    "node-wifi": "^2.0.16",
    "systeminformation": "^5.25.11",
    "unzipper": "^0.12.3",
    "wifi-control": "^2.0.1"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.12.0"
  },
  "build": {
    "appId": "com.fg1998.emulos",
    "productName": "EmulOS",
    "artifactName": "emulos-app-v${version}-${os}-${arch}.${ext}",
    "asar": true,
    "asarUnpack": [
      "data/**/*",
      "config/**/*",
      "docs/**/*"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "../data",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "config/",
        "to": "../config",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "docs/",
        "to": "../docs",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "deb": {
      "artifactName": "emulos-app-v${version}_${arch}.deb",
      "maintainer": "Fernando Garcia <fg1998@gmail.com>",
      "depends": [
        "libappindicator1",
        "libxtst6"
      ],
      "afterInstall": "fix-install-path.sh",
      "fpm": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "fg1998",
        "repo": "emulos",
        "releaseType": "draft"
      }
    ]
  }
}
